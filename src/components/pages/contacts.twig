{% extends '../templates/layout.twig' %}

{% block main %}
    <main>
        <section>
            <div class="main-image">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d11061.539128110142!2d32.01893521842728!3d36.542698467645934!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1sru!2sua!4v1732469868754!5m2!1sru!2sua" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <div class="container-fluid">
                    <h1 class="title-page">Контакты</h1>
                </div>
            </div>
        </section>
        <section class="py-lg-160 py-80 contacts-section-1">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-4 mb-40">
                        <h2 class="f-lg-51 lh-lg-56 f-32 lh-32 mb-40 f-bold">Обратная связь</h2>
                        <div class="f-lg-24 lh-lg-26 f-20 lh-22 f-regular">
                            <p>Avda Vila de Tossa, 54 Planta Baja, Puerta A, 17310 Lloret de Mar (Girona), España</p>
                            <p>
                                +34 666 884 644<br/>
                                +34 630 313 122<br/>
                                +34 672 239 672
                            </p>
                            <p>zlataconsolasl@gmail.com</p>
                        </div>
                    </div>
                    <div class="col-xl-8">
                        <h2 class="f-lg-51 lh-lg-56 f-32 lh-32 mb-40 f-bold">У вас есть вопрос?</h2>
                        <p class="f-lg-24 lh-lg-26 f-20 lh-22 f-regular">Оставьте свои контакты, и мы перезвоним Вам!</p>
                        <div class="row">
                            <div class="col-xl-4">
                                <div class="form-floating mb-15">
                                    <input type="text" class="form-control" id="name" placeholder="Имя">
                                    <label for="name">Имя</label>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="form-floating mb-15">
                                    <input type="text" class="form-control" id="phone" placeholder="Номер телефона">
                                    <label for="phone">Номер телефона</label>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="form-floating mb-15">
                                    <input type="text" class="form-control" id="email" placeholder="Email">
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-40">
                                    <textarea class="form-control" placeholder="Сообщение" id="message"></textarea>
                                    <label for="message">Сообщение</label>
                                </div>
                            </div>
                            <div class="col-12 text-end">
                                <button class="btn btn-warning">Отправить</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {% include '../organisms/video-section.twig' %}
    </main>
{% endblock %}
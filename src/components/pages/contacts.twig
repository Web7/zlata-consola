{% extends '../templates/layout.twig' %}

{% block main %}
    <main>
        <section>
            <div class="main-image" style="background-image: url(images/contacts-main-bg.jpg)">
                <div class="container-fluid">
                    <h1 class="title-page">Контакты</h1>
                </div>
            </div>
        </section>
        <section class="py-160">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-4">
                        <h2 class="f-51 lh-64 f-bold">Обратная связь</h2>
                        <div class="f-24 lh-26 f-regular">
                            <p>Avda Vila de Tossa, 54 Planta Baja, Puerta A, 17310 Lloret de Mar (Girona), España</p>
                            <p>
                                +34 666 884 644<br/>
                                +34 630 313 122<br/>
                                +34 672 239 672
                            </p>
                            <p>zlataconsolasl@gmail.com</p>
                        </div>
                    </div>
                    <div class="col-xl-8">
                        <h2 class="f-51 lh-64 f-bold">У вас есть вопрос?</h2>
                        <p class="f-24 lh-20 f-regular">Оставьте свои контакты, и мы перезвоним Вам!</p>
